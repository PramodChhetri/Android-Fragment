<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeactivity">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:name="com.example.mp_05_fragmentsexample.fragment_first"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent=".5"
        android:id="@+id/fragment_first"
        />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:name="com.example.mp_05_fragmentsexample.fragment_second"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_first"
        app:layout_constraintHeight_percent=".5"
        android:id="@+id/fragment_second"
        />

</androidx.constraintlayout.widget.ConstraintLayout>